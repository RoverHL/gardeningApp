extends layout


block content


  .container
    .jumbotron
          h3 Edit Flower
          .row
            .col-md-6.col-md-offset-3
              if (flashMsg && flashMsg.length > 0)
                .alert.alert-danger <strong></strong>#{flashMsg}
              form#update(action='/home/save/' + id, method='POST')
                .form-group
                  label(for="name") Flower Name :
                  input#name.form-control(type="text", name="name", value=name)
                  label(for="description") Description :
                  input#description.form-control(type="text", value=description name="description")
                label(for='water') Water needs:
                br
                label.radio-inline
                  input#low(name='water', type='radio', value='little' checked=water=="little")
                  | Not Much
                label.radio-inline
                  input#average(name='water', type='radio', value='average' checked=water=="average")
                  | Some
                label.radio-inline
                  input#high(name='water', type='radio', value='plentiful' checked=water=="plentiful")
                  | Alot
                input#id.form-control(type='hidden', value=id name='id')
                br
                button#submit.btn.btn-primary(type='submit') Save Changes
                br
                br
                br
                br
              form(action='/home/delete/' + id, method='POST')
                .form-group
                button.btn.btn-primary(type='submit') Delete
